---
import aboutImg from "@/assets/about-astro.png";
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";

const meta = {
	description: "",
	title: "About",
};

const cactusTech: { desc: string; href: string; title: string }[] = [
	{
		desc: "Research and code",
		href: "https://x.com/bigsky_7",
		title: "Simon",
	},
];
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">About</h1>
		<p>
        Psycho Virtual combines interdisciplinary research with rapid development cycles.
            <br>
            <br>
            We selectively partner with leading technology companies, protocols, and investors.
            <br>
			<p>
				If this sounds interesting send us a note on <a
					aria-label="github repository"
					class="cactus-link inline-block"
					href="https://t.me/+dyWKxFrVcMk2NjYx"
					rel="noopener noreferrer"
					target="_blank">telegram</a
				>.
			</p>
		</p>
		<h1 class="title">Team</h1>
		<dl class="space-y-4">
			{
				cactusTech.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2 sm:flex-row">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</div>
</PageLayout>
