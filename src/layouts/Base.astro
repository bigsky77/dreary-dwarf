---
import type { SiteMeta } from "@/types";
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site-config";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html lang={siteConfig.lang}>
	<head>
		<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />

<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

    :root {
        --bg-color: #14141e;
        --text-color: #e0e0e0;
    }

    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: var(--text-color);
        background-color: var(--bg-color);
    }

    body {
        background-image: url('../content/post/plonk2.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        max-width: 100%;
        padding: 0;
    }

    .layout-container {
        position: absolute;
        top: 45%;
        left: 25%;
        transform: translate(0, -50%);
        width: 55%;
        max-height: 85vh;
    }

    .center-content {
        background-color: rgba(20, 20, 30, 0.9);
        padding: 40px;
        overflow-y: auto;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    /* Header styles */
    header {
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #ffd700;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
        font-size: 1.1rem;
    }

    .nav-links a {
        color: #f0e68c;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: #fff;
    }

    /* Content styles */
    main {
        margin: 0 auto;
    }

    h2 {
        font-size: 1.8rem;
        font-weight: 600;
        color: #daa520;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }

    /* Post list styles */
    .post-list {
        list-style-type: none;
        padding: 0;
    }

    .post-list li {
        margin-bottom: 1rem;
    }

    .post-list a {
        font-size: 1.1rem;
        color: #add8e6;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .post-list a:hover {
        color: #fff;
    }

    .post-date {
        font-size: 0.9rem;
        color: #808080;
        margin-right: 0.5rem;
    }

    .draft {
        color: #ff6347;
        font-weight: 600;
    }

    /* Additional styles */
    p {
        margin-bottom: 1rem;
    }

    a {
        color: #87cefa;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #fff;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .layout-container {
            left: 5%;
            width: 90%;
        }

        body {
            font-size: 14px;
        }

        h1 {
            font-size: 1.8rem;
        }

        h2 {
            font-size: 1.5rem;
        }
    }
</style>	</head>
	<body>
		<ThemeProvider />
		<SkipLink />
		<div class="layout-container">
			<div class="center-content">
				<Header />
				<main id="main">
					<slot />
				</main>
				<Footer />
			</div>
		</div>
	</body>
</html>
